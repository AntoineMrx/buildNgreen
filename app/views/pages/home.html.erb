<%= render 'shared/banner' %>
    <div class="row">
      <% @categories.each do |category| %>
      <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">

          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.3)), url('<%= asset_path("category/#{category.id}.jpeg") %>');">
            <div><%= category.name %></div>
            <div class="card-description">
              <% if category.products.count > 1 %>
                  <h2> <%= category.products.count %> products</h2>
              <% else %>
                  <h2> <%= category.products.count %> product</h2>
              <% end %>
            </div>
            <a class="card-link" href="<%= category_path(category) %>" ></a>
          </div>
        <div id=<%= @product.id %> class="add btn btn-primary">Add item</div>
      </div>
      <% end %>
    </div>
