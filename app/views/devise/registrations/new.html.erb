<div class="container">
<% if current_page?("/buyers/sign_up") %>
<h2> Créer un compte</h2>
<p><%= link_to "Je suis un Marchand", new_seller_registration_path %></p>

<% else %>
<h2>Inscription Marchand</h2>
<% end %>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="form-group">
      <%= f.input :email, required: true, autofocus: true %>
    </div>
    <div class="form-group" >
      <%= f.input :password, label: "Mot de passe", required: true, hint: ("Au minimum #{@minimum_password_length} charactères" if @minimum_password_length) %>
    </div>
    <div class="form-group">
      <%= f.input :password_confirmation, label: "Confirmer le mot de passe", required: true %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Créer mon compte" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
