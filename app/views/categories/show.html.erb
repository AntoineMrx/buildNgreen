<div class="container-fluid">
<div class="separator">
<h2 ><%= @category.name %></h2>
</div>

<div class="separator">
<%= @category.description %>
</div>

<div class="row">
      <% @category.products.each do |product| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card-product">
          <div class="card-product-body" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.2)), url('<%= asset_path("product/#{product.id}.jpg") %>'); ">
            <% if product.name.length > 30 %>
                <span class="card-product-category"><%= product.name.first(30) %>...</span>
            <% else %>
                <span class="card-product-category"><%= product.name %></span>
            <% end %>
            <div class="card-product-description">
              <h2><%= product.description %></h2>
            </div>
            <img class="card-product-user avatar" src="images/jad.png">
            <a class="card-product-link" href="<%= product_path(product) %>"></a>
          </div>
          <div class="card-product-footer">
           <!--  <p><strong>Category: </strong><%= product.category.name %></p> -->
           <p><strong>Prix: </strong><%= product.selling_price %> euros</p>
            <div class="controls">


                <a href="#">
                <i class="fa fa-cart-plus" aria-hidden="true"></i>
              </a>

              </a>
              </a>
            </div>
          </div>
        </div>
        </div>
        <% end %>
        </div>
        </div>
