<h1>Categories#index</h1>
<p>Find me in app/views/categories/index.html.erb</p>


<div class="container">
  <div class="category-row">
        <% @categories.order(:id).each do |category| %>
        <div class="col-xs-12 col-sm-4">
          <div class="card">
            <%= link_to category_path(category) do %>
              <div class="card-body">
               <%= image_tag(url(asset_path("/category/#{:id}.jpg")), class: "card-picture", height: 400, width: 600, crop: :fill) %>
               </div>
              <div class="card-name">
                <%= category.name %>
              </div>
            <% end %>
          </div>
        </div>
        <% end %>
  </div>
</div>
